---
import Link from "./ui/link.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";
import CALogo from "@assets/ciso-assistant_logo.png";
import { Image } from "astro:assets";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-2 lg:mx-auto max-w-5xl rounded-lg flex flex-col items-center text-center">
  <h2 class="text-white text-4xl md:text-6xl tracking-tighter">
    {t("cta.text1")}
  </h2>
  <p class="text-slate-400 mt-4 text-lg md:text-xl">
    {t("cta.text2")}
  </p>
  <div class="flex mt-5">
    <Link class="flex items-center" href="solutions#products" style="inverted">{t("cta.button")} 
      <Image
      src={CALogo}
      alt="CISO Assistant Logo"
      width={45}
      loading="eager"
      format="avif"
    /></Link>
  </div>
</div>
