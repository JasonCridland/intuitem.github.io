---
import { Image } from "astro:assets";
const images = await Astro.glob("../assets/ss/*.{jpg,jpeg,png}");
---

<div>
    {
        images.map((image) => (
            <a href={image.default.src}>
                <Image
                    src={image.default}
                    alt=""
                    format={"webp"}
                    sizes=""
                    widths={[336, 388, 520]}
                    />
            </a>
        ))
    }
</div>

<style lang="css">
    div {
        columns: 16rem auto;
        column-gap: 0.5rem;

    }
</style>