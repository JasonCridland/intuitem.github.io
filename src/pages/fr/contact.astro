---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Button from "@components/ui/button.astro";
import Contactform from "@components/contactform.astro";
---

<Layout title="Contact">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">Réponse garantie sous 48h max</Fragment>
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-4xl mt-16">
      <div class="p-4 lg:p-10">
        <h2 class="font-medium text-2xl text-gray-800">Nous contacter</h2>
        <p class="text-lg leading-relaxed text-slate-500 mt-3">
          Nos équipes sont à votre disposition pour vous assister sur l'ensemble
          de nos produits et services.
        </p>
        <div class="mt-5">
          <div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:map-marker" />
            <span>8 Rue des frères Caudron, 78140 Vélizy-villacoublay</span>
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:envelope" /><a
              href="mailto:contact@intuitem.com">contact@intuitem.com</a
            >
          </div><div class="flex items-center mt-2 space-x-2 text-gray-600">
            <Icon class="text-gray-400 w-4 h-4" name="uil:phone" /><a
              href="tel:+33663068331">+33 (0)6 63 06 83 31</a
            >
          </div>
        </div>
      </div>
      <div class="p-4 lg:p-10">
        <script
          charset="utf-8"
          type="text/javascript"
          src="//js-eu1.hsforms.net/forms/embed/v2.js"></script>
        <script>
          hbspt.forms.create({
            region: "eu1",
            portalId: "25949168",
            formId: "2bb5a83b-29a0-4cdf-8192-6405fdc7d750",
          });
        </script>
      </div>
    </div>
  </Container>
</Layout>
